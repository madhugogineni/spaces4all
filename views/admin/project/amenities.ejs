<% include ../includes/header.ejs %>

<!-- Left side column. contains the logo and sidebar -->

<% include ../includes/menu.ejs %>


<!-- Content Wrapper. Contains page content -->
<script>
    function updateValues(amenityId, amenity, amenityIcon) {
        setUpValue('amenity_icon1', amenityIcon);
        setUpValue('amenity1', amenity);
        setUpValue('amenity_id', amenityId);
        showAjaxModal('<%= base_url %>admin/amenity/edit/' + amenityId, 'amenity');
    }
</script>

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>

            <%= page_title %>

        </h1>

        <ol class="breadcrumb">

            <li><a href="<%= base_url %>admin"><i class="fa fa-home"></i> Home</a></li>

            <li class="active"><%= page_title %></li>

        </ol>

    </section>


    <!-- Main content -->


    <section class="content">

        <div class="row">

            <div class="col-xs-12">


                <div class="box">

                    <div class="box-header">

                        <div class="col-md-5"></div>

                        <div class="col-md-2">

                            <button type="button" class="btn btn-block btn-default"

                                    data-toggle="modal" data-target="#myModal">Add New Amenity
                            </button>

                        </div>

                    </div>

                    <!-- /.box-header -->

                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">

                            <thead>

                            <tr>

                                <th>S.No</th>

                                <th>Amenity</th>

                                <th>Amenity Icon</th>

                                <th>Actions</th>

                            </tr>

                            </thead>

                            <tbody>
                            <% for(var i = 0;i < amenities.length;i++){
                                var amenity = amenities[i]; %>

                            <tr>

                                <td><%= i %></td>

                                <td><%= amenity.amenity %></td>
                                <td><%= amenity.amenity_icon %></td>

                                <td>

                                    <a href="#"
                                       onclick="updateValues('<%= amenity.amenity_id %>','<%= amenity.amenity %>','<%= amenity.amenity_icon %>')"><i
                                                class="fa fa-edit"></i></a>&nbsp;&nbsp;&nbsp;

                                    <a href="<%= base_url %>admin/amenity/delete/<%= amenity.amenity_id %>"
                                       onclick="return confirm('Are You Sure Want to Delete ?')"><i
                                                class="fa fa-trash-o"></i></a>

                                </td>

                            </tr>

                            <% } %>

                            </tbody>

                        </table>

                    </div>

                    <!-- /.box-body -->

                </div>

                <!-- /.box -->

            </div>

            <!-- /.col -->

        </div>

        <!-- /.row -->

    </section>

    <!-- /.content -->


</div>

<!-- /.content-wrapper -->


<!-- Modal -->


<!-- (Ajax Modal)-->

<div class="modal fade" id="modal_ajax">

    <div class="modal-dialog">

        <div class="modal-content">

            <form action="<%= base_url %>admin/amenity/update" method="post">

                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                    <h4 class="modal-title">Edit Amenity</h4>

                </div>


                <div class="modal-body">

                    <div class="box-body">

                        <div class="form-group">

                            <label for="property_type">Amenity</label>
                            <input class="form-control" id="amenity1" name="amenity1"
                                   placeholder="Enter Amenity" type="text" required="required">
                            <br/>
                            <label for="property_type">Amenity Icon</label>
                            <input class="form-control" id="amenity_icon1" name="amenity_icon1"
                                   placeholder="Enter Amenity Icon" type="text" required="required">

                            <input type="hidden" name="amenity_id" value="">
                        </div>

                    </div>

                </div>


                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Save Changes</button>

                </div>

            </form>

        </div>

    </div>

</div>


<div id="myModal" class="modal fade" role="dialog">

    <div class="modal-dialog">


        <!-- Modal content-->

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h4 class="modal-title">Add Amenity</h4>

            </div>

            <form action="<%= base_url %>admin/amenity/add" method="post">

                <div class="modal-body">


                    <div class="box-body">

                        <div class="form-group">

                            <label for="property_type">Amenity</label>
                            <input class="form-control" id="amenity" name="amenity"
                                   placeholder="Enter Amenity" type="text" required="required">
                            <br/>
                            <label for="property_type">Amenity Icon</label>
                            <input class="form-control" id="amenity_icon" name="amenity_icon"
                                   placeholder="Enter Amenity Icon" type="text" required="required">


                        </div>

                    </div>

                    <!-- /.box-body -->


                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Add</button>

                </div>

            </form>

        </div>


    </div>

</div>


<% include ../includes/footer.ejs %>
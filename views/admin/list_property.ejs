<% include includes/header.ejs %>

<!-- Left side column. contains the logo and sidebar -->

<% include includes/menu.ejs %>


<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>

            <%= page_title %>

        </h1>

        <ol class="breadcrumb">

            <li><a href="<%= base_url %>admin"><i class="fa fa-home"></i> Home</a></li>

            <li class="active"><%= page_title %></li>

        </ol>

    </section>


    <!-- Main content -->


    <section class="content">

        <div class="row">

            <div class="col-xs-12">


                <div class="box">

                    <div class="box-header">

                        <div class="col-md-5"></div>

                        <div class="col-md-2">


                        </div>

                    </div>

                    <!--                    <div align="center">-->

                    <!--                        <?php-->

                    <!--					if ($this->session->flashdata('message')) {-->

                    <!--                        echo "<h5>".$this->session->flashdata('message')."</h5>";-->

                    <!--                        }-->

                    <!--                        ?>-->

                    <!--                    </div>-->

                    <!-- /.box-header -->

                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">

                            <thead>

                            <tr>

                                <th>S.No</th>

                                <th>Name</th>

                                <th>Email</th>

                                <th>Phone</th>

                                <th>Property Type</th>

                                <th>Property Sub Type</th>

                                <th>City</th>

                                <th>Quoted Price</th>

                                <th>Status</th>

                                <th>Hot Property</th>

                                <th>Actions</th>

                            </tr>

                            </thead>

                            <tbody>
                            <% for(var i = 0;i < list_property.length;i++) {
                                var property = list_property[i]
                            %>

                            <tr>

                                <td><%= i %></td>

                                <td><%= property.name %></td>

                                <td><%= property.email %></td>

                                <td><%= property.phone %></td>

                                <td><%= property.property_type_name %></td>

                                <td><%= property.property_sub_type_name %></td>

                                <td><%= property.city_name %></td>

                                <td><%= property.quoted_price %></td>

                                <td>
                                    <% if(property.status == '1') { %>

                                        <a href="<%= base_url %>admin/status_list_property/0/<%= property.list_property_id %>"
                                           onclick="return confirm('Are You Sure Want to Inactive ?')"><b>Active</b></a>
                                    <% } else { %>
                                        <a href="<%= base_url %>admin/status_list_property/1/<%= property.list_property_id %>"
                                           onclick="return confirm('Are You Sure Want to Active ?')"><b
                                                    style="color: red">In-active</b></a>
                                    <% } %>
                                </td>

                                <td>
                                    <% if(property.hot_property == '1') { %>

                                        <a href="<%= base_url %>admin/hot_property/0/<%= property.list_property_id %>"
                                           onclick="return confirm('Are You Sure Want to Remove From Hot Property ?')"><b
                                                    style="color: red">Yes</b></a>
                                    <% } else { %>
                                        <a href="<%= base_url %>admin/hot_property/1/<%= property.list_property_id %>"
                                           onclick="return confirm('Are You Sure Want to  Make It Hot Property ?')"><b>No</b></a>

                                    <% } %>
                                </td>

                                <td>

                                    <a href="#"
                                       onclick="showAjaxModal('<%= base_url %>admin/popup/property_possession/<%= property.list_property_id %>','property')"><b>Possession</b></a>&nbsp;&nbsp;&nbsp;

                                    <a href="<%= base_url %>admin/edit_property/<%=property.list_property_id %>"
                                       title="Edit"><i class="fa fa-edit"></i></a>&nbsp;&nbsp;&nbsp;

                                    <a href="<%= base_url %>admin/delete_list_property/<%=property.list_property_id%>"
                                       onclick="return confirm('Are You Sure Want to Delete ?')"
                                       title="Delete"><i class="fa fa-trash-o"></i></a>
                                    <br/>
                                    <a href="#"
                                       onclick="showAjaxModal1('<%= base_url %>admin/property_details/<%= property.list_property_id %>')"><b>View
                                            Details</b></a>
                                    <br/>
                                    <a href="<%= base_url %>admin/property_photos/<%=property.list_property_id%>"><b>Edit
                                            Images</b>
                                    </a>
                                    <br/>
                                    <% if(property.latest_property == '1') { %>

                                        <a href="<%= base_url %>admin/latest_property/0/<%= property.list_property_id %>"
                                           onclick="return confirm('Are You Sure Want to Remove From Hot Property ?')"><b
                                                    style="color: red">Remove Latest Property</b></a>
                                    <% } else { %>
                                        <a href="<%= base_url %>admin/latest_property/1/<%= property.list_property_id %>"
                                           onclick="return confirm('Are You Sure Want to  Make It Hot Property ?')"><b>Make
                                                Latest Property</b></a>

                                    <% } %>

                                </td>

                            </tr>

                            <% } %>
                            </tbody>

                        </table>

                    </div>

                    <!-- /.box-body -->

                </div>

                <!-- /.box -->

            </div>

            <!-- /.col -->

        </div>

        <!-- /.row -->

    </section>

    <!-- /.content -->


</div>

<!-- /.content-wrapper -->



<% include includes/header.ejs %>

<!-- Left side column. contains the logo and sidebar -->

<% include includes/menu.ejs %>


<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>

            <%= page_title %>

        </h1>

        <ol class="breadcrumb">

            <li><a href="<%= base_url %>admin"><i class="fa fa-home"></i> Home</a></li>

            <li class="active"><%= page_title %></li>

        </ol>

    </section>


    <!-- Main content -->


    <section class="content">

        <div class="row">

            <div class="col-xs-12">


                <div class="box">

                    <div class="box-header">

                        <div class="col-md-5"></div>

                        <div class="col-md-2">


                        </div>

                    </div>

                    <!-- /.box-header -->

                    <div class="box-body">

                        <div class="col-md-6">

                            <h4><u>Side Video</u></h4><br>

                            <% if(side_project_video) { %>
                                <div class="fluid-width-video-wrapper"><%-side_project_video.link %></div>

                                <div class="col-md-6">
                                    <button type="button" class="btn btn-block btn-default" data-toggle="modal"
                                            data-target="#myModal">Change Video
                                    </button>
                                </div>
                            <% } else { %>
                                <div class="col-md-6">
                                    <button type="button" class="btn btn-block btn-default" data-toggle="modal"
                                            data-target="#myModal">Add Video
                                    </button>
                                </div>
                            <% } %>
                        </div>

                        <div class="col-md-6">

                            <h4><u>Bottom Video</u></h4><br>

                            <% if(bottom_project_video) { %>

                                <div class=""><%- bottom_project_video.link %></div>


                                <div class="col-md-6">
                                    <button type="button" class="btn btn-block btn-default"

                                            data-toggle="modal" data-target="#myModal1">Change Video
                                    </button>
                                </div>

                            <% } else { %>

                                <div class="col-md-6">
                                    <button type="button" class="btn btn-block btn-default"

                                            data-toggle="modal" data-target="#myModal1">Add Video
                                    </button>
                                </div>

                            <% } %>

                        </div>

                    </div>

                    <!-- /.box-body -->

                </div>

                <!-- /.box -->

            </div>

            <!-- /.col -->

        </div>

        <!-- /.row -->

    </section>

    <!-- /.content -->


</div>

<!-- /.content-wrapper -->


<!-- Modal -->


<div id="myModal" class="modal fade" role="dialog">

    <div class="modal-dialog">


        <!-- Modal content-->

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h4 class="modal-title">Change Video</h4>

            </div>

            <form action="<%= base_url %>admin/project_videos/update" method="post">

                <div class="modal-body">


                    <div class="box-body">

                        <div class="form-group">

                            <label for="city">Enter Youtube Link</label>
                            <input class="form-control" id="link" name="link" placeholder="Enter Youtube Video Link"
                                   type="text" required="required">

                        </div>

                        <input type="hidden" name="type" value="side">

                    </div>

                    <!-- /.box-body -->


                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Save Changes</button>

                </div>

            </form>

        </div>


    </div>

</div>

<div id="myModal1" class="modal fade" role="dialog">

    <div class="modal-dialog">


        <!-- Modal content-->

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h4 class="modal-title">Change Video</h4>

            </div>

            <form action="<%= base_url %>admin/project_videos/update" method="post">

                <div class="modal-body">


                    <div class="box-body">

                        <div class="form-group">

                            <label for="city">Enter Youtube Link</label>
                            <input class="form-control" id="link" name="link" placeholder="Enter Youtube Video Link"
                                   type="text" required="required">

                        </div>

                        <input type="hidden" name="type" value="bottom">

                    </div>

                    <!-- /.box-body -->


                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Save Changes</button>

                </div>

            </form>

        </div>


    </div>

</div>


<% include includes/footer.ejs %>
<% include includes/header.ejs %>

<!-- Left side column. contains the logo and sidebar -->

<% include includes/menu.ejs %>


<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>

            <%= page_title %>

        </h1>

        <ol class="breadcrumb">

            <li><a href="<%= base_url %>admin"><i class="fa fa-home"></i> Home</a></li>

            <li class="active"><%= page_title %></li>

        </ol>

    </section>


    <!-- Main content -->


    <section class="content">

        <div class="row">

            <div class="col-xs-12">


                <div class="box">

                    <div class="box-header">

                        <div class="col-md-5"></div>

                        <div class="col-md-2">


                        </div>

                    </div>

                    <!-- /.box-header -->

                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">

                            <thead>

                            <tr>

                                <th>S.No</th>

                                <th>Name</th>

                                <th>Email</th>

                                <th>Phone</th>

                                <th>Contract Type</th>

                                <th>Property Type</th>

                                <th>Property Sub Type</th>

                                <th>City</th>

                                <th>Min Price</th>

                                <th>Max Price</th>

                                <th>Actions</th>

                            </tr>

                            </thead>

                            <tbody>

                            <% for(var i = 0;i < post_requirements.length;i++) {
                                var post_requirement = post_requirements[i]; %>

                            <tr>

                                <td><%= i %></td>

                                <td><%= post_requirement.name %></td>

                                <td><%= post_requirement.email %></td>

                                <td><%= post_requirement.phone %></td>

                                <td><%= post_requirement.type %></td>

                                <td><%= post_requirement.property_type_name %></td>

                                <td><%= post_requirement.property_sub_type_name %></td>

                                <td><%= post_requirement.city_name %></td>

                                <td><%= post_requirement.min_price %></td>

                                <td><%= post_requirement.max_price %></td>

                                <td>

                                    <a href="#"
                                       onclick="showAjaxModal1('<%= base_url %>admin/post_requirement/<%= post_requirement.post_requirement_id %>','post_requirement')"><b>View</b></a>&nbsp;&nbsp;

                                    <a href="<%= base_url %>admin/post_requirement/delete/<%= post_requirement.post_requirement_id %>"
                                       onclick="return confirm('Are You Sure Want to Delete ?')"><i
                                                class="fa fa-trash-o"></i></a>

                                </td>

                            </tr>

                            <% } %>

                            </tbody>

                        </table>

                    </div>

                    <!-- /.box-body -->

                </div>

                <!-- /.box -->

            </div>

            <!-- /.col -->

        </div>

        <!-- /.row -->

    </section>

    <!-- /.content -->


</div>

<!-- /.content-wrapper -->


<!-- Modal -->


<!-- (Ajax Modal)-->

<div class="modal fade" id="modal_ajax1">

    <div class="modal-dialog">

        <div class="modal-content">


            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                <h4 class="modal-title">Post Requirement Details</h4>

            </div>


            <div class="modal-body">


            </div>


            <div class="modal-footer">

                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>


        </div>

    </div>

</div>


<% include includes/footer.ejs %>
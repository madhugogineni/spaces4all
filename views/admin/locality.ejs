<% include includes/header.ejs %>

<!-- Left side column. contains the logo and sidebar -->

<% include includes/menu.ejs %>


<!-- Content Wrapper. Contains page content -->
<script>
    function updateValues(cityId, locality, localityId) {
        selectOption('city1', cityId);
        setUpValue('locality', locality);
        setUpValue('locality_id', localityId);
        showAjaxModal('<%= base_url %>admin/locality/edit/' + localityId, 'locality');
    }
</script>

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>

            <%= page_title %>

        </h1>

        <ol class="breadcrumb">

            <li><a href="<%= base_url %>admin"><i class="fa fa-home"></i> Home</a></li>

            <li class="active"><%= page_title %></li>

        </ol>

    </section>


    <!-- Main content -->


    <section class="content">

        <div class="row">

            <div class="col-xs-12">


                <div class="box">

                    <div class="box-header">

                        <div class="col-md-5"></div>

                        <div class="col-md-2">

                            <button type="button" class="btn btn-block btn-default"

                                    data-toggle="modal" data-target="#myModal">Add Locality
                            </button>

                        </div>

                    </div>

                    <!-- /.box-header -->

                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">

                            <thead>

                            <tr>

                                <th>S.No</th>

                                <th>City</th>

                                <th>Locality</th>

                                <th>Actions</th>

                            </tr>

                            </thead>

                            <tbody>
                            <% for(var i = 0;i < localities.length;i++) {
                                var locality = localities[i]; %>

                            <tr>

                                <td><%= i %></td>

                                <td><%= locality.city %></td>

                                <td><%= locality.locality %></td>

                                <td>

                                    <a href="#"
                                       onclick="updateValues('<%= locality.city_id %>','<%= locality.locality %>','<%= locality.locality_id %>')"><i
                                                class="fa fa-edit"></i></a>&nbsp;&nbsp;&nbsp;

                                    <a href="<%= base_url %>admin/locality/delete/<%= locality.locality_id %>"
                                       onclick="return confirm('Are You Sure Want to Delete ?')"><i
                                                class="fa fa-trash-o"></i></a>

                                </td>

                            </tr>

                            <% } %>

                            </tbody>

                        </table>

                    </div>

                    <!-- /.box-body -->

                </div>

                <!-- /.box -->

            </div>

            <!-- /.col -->

        </div>

        <!-- /.row -->

    </section>

    <!-- /.content -->


</div>

<!-- /.content-wrapper -->


<!-- Modal -->


<!-- (Ajax Modal)-->

<div class="modal fade" id="modal_ajax">

    <div class="modal-dialog">

        <div class="modal-content">

            <form action="<%= base_url %>admin/locality/update" method="post">

                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                    <h4 class="modal-title">Edit Locality</h4>

                </div>


                <div class="modal-body">
                    <div class="modal-body">
                        <div class="box-body">

                            <div class="form-group">

                                <label for="city1">City</label>

                                <select name="city1" id="city1" class="form-control" required="required">
                                    <script>
                                        setUpCities('#city1');
                                    </script>
                                </select>

                            </div>

                        </div>


                        <div class="box-body">

                            <div class="form-group">

                                <label for="locality">Locality</label>
                                <input class="form-control" id="locality" name="locality" placeholder="Enter locality"
                                       type="text" value="" required="required">

                            </div>

                        </div>

                        <input type="hidden" name="locality_id" value=""></div>

                </div>


                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Save Changes</button>

                </div>

            </form>

        </div>

    </div>

</div>


<div id="myModal" class="modal fade" role="dialog">

    <div class="modal-dialog">


        <!-- Modal content-->

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h4 class="modal-title">Add Locality</h4>

            </div>

            <form action="<%= base_url %>admin/locality/add" method="post">

                <div class="modal-body">

                    <div class="box-body">

                        <div class="form-group">

                            <label for="city">City</label>

                            <select name="city" id="city" class="form-control" required="required">

                                <option value="">Select City</option>
                                <script>
                                    setUpCities('#city');
                                </script>
                            </select>

                        </div>

                    </div>


                    <div class="box-body">

                        <div class="form-group">

                            <label for="locality">Locality</label>
                            <input class="form-control" id="locality" name="locality"
                                   placeholder="Enter locality" type="text" required="required">

                        </div>

                    </div>

                    <!-- /.box-body -->


                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Add</button>

                </div>

            </form>

        </div>


    </div>

</div>


<% include includes/footer.ejs %>
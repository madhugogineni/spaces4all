<% include ../includes/header.ejs %>

<!-- Left side column. contains the logo and sidebar -->

<% include ../includes/menu.ejs %>
<script>
    function updateValues(propertyType, propertyTypeId) {
        setUpValue('type1', propertyType);
        setUpValue('property_type_id', propertyTypeId);
        showAjaxModal('<%= base_url %>admin/property_type/edit/' + propertyTypeId, 'property_type');
    }
</script>
<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>

            <%= page_title %>

        </h1>

        <ol class="breadcrumb">

            <li><a href="<%= base_url %>admin"><i class="fa fa-home"></i> Home</a></li>

            <li class="active"><%= page_title %></li>

        </ol>

    </section>


    <!-- Main content -->


    <section class="content">

        <div class="row">

            <div class="col-xs-12">


                <div class="box">

                    <div class="box-header">

                        <div class="col-md-5"></div>

                        <div class="col-md-2">

                            <button type="button" class="btn btn-block btn-default"

                                    data-toggle="modal" data-target="#myModal">Add Property Type
                            </button>

                        </div>

                    </div>

                    <!-- /.box-header -->

                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">

                            <thead>

                            <tr>

                                <th>S.No</th>

                                <th>Property Type</th>

                                <th>Actions</th>

                            </tr>

                            </thead>

                            <tbody>
                            <% for(var i = 0;i < property_types.length;i++) {
                                var property_type = property_types[i]; %>

                            <tr>

                                <td><%= i %></td>

                                <td><%= property_type.type %></td>

                                <td>

                                    <a href="#"
                                       onclick="updateValues('<%= property_type.type %>','<%= property_type.property_type_id %>')"><i
                                                class="fa fa-edit"></i></a>&nbsp;&nbsp;&nbsp;

                                    <a href="<%= base_url %>admin/property_type/delete/<%= property_type.property_type_id %>"
                                       onclick="return confirm('Are You Sure Want to Delete ?')"><i
                                                class="fa fa-trash-o"></i></a>

                                </td>

                            </tr>

                            <% } %>

                            </tbody>

                        </table>

                    </div>

                    <!-- /.box-body -->

                </div>

                <!-- /.box -->

            </div>

            <!-- /.col -->

        </div>

        <!-- /.row -->

    </section>

    <!-- /.content -->


</div>

<!-- /.content-wrapper -->


<!-- Modal -->


<!-- (Ajax Modal)-->

<div class="modal fade" id="modal_ajax">

    <div class="modal-dialog">

        <div class="modal-content">

            <form action="<%= base_url %>admin/property_type/update" method="post">

                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                    <h4 class="modal-title">Edit Proprty Type</h4>

                </div>


                <div class="modal-body">

                    <label for="property_type">Property Type</label>
                    <input class="form-control" id="type1" name="type1" placeholder="Enter Project Type"
                           type="text" value="">

                    <input type="hidden" name="property_type_id" value="">
                </div>


                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Save Changes</button>

                </div>

            </form>

        </div>

    </div>

</div>


<div id="myModal" class="modal fade" role="dialog">

    <div class="modal-dialog">


        <!-- Modal content-->

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h4 class="modal-title">Add Property Type</h4>

            </div>

            <form action="<%= base_url %>admin/property_type/add" method="post">

                <div class="modal-body">


                    <div class="box-body">

                        <div class="form-group">

                            <label for="property_type">Property Type</label>
                            <input class="form-control" id="type" name="type"
                                   placeholder="Enter Property Type" type="text" required="required">

                        </div>

                    </div>

                    <!-- /.box-body -->


                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Add</button>

                </div>

            </form>

        </div>


    </div>

</div>


<% include ../includes/footer.ejs %>
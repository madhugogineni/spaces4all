<% include ../includes/header.ejs %>

  <!-- Left side column. contains the logo and sidebar -->

  <% include ../includes/menu.ejs %>
    <script>
      function updateValues(name, code, id) {
        setUpValue('name1', name);
        setUpValue('code1', code);
        setUpValue('id', id);
        showAjaxModal('', 'stocks');
      }
    </script>
    <!-- Content Wrapper. Contains page content -->

    <div class="content-wrapper">

      <!-- Content Header (Page header) -->

      <section class="content-header">

        <h1>

          <%= page_title %>

        </h1>

        <ol class="breadcrumb">

          <li><a href="<%= base_url %>admin"><i class="fa fa-home"></i> Home</a></li>

          <li class="active">
            <%= page_title %>
          </li>

        </ol>

      </section>


      <!-- Main content -->


      <section class="content">

        <div class="row">

          <div class="col-xs-12">


            <div class="box">

              <div class="box-header">

                <div class="col-md-5"></div>

                <div class="col-md-2">

                  <button type="button" class="btn btn-block btn-default" data-toggle="modal" data-target="#myModal">Add
                    Stock
                  </button>

                </div>

              </div>

              <!-- /.box-header -->

              <div class="box-body">

                <table id="example1" class="table table-bordered table-striped">

                  <thead>
                    <tr>
                      <th>S.No</th>
                      <th>Name</th>
                      <th>Code</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i=0;i < stocks.length;i++) { var stock=stocks[i]; %>
                      <tr>
                        <td>
                          <%= (i+1) %>
                        </td>
                        <td>
                          <%= stock.name %>
                        </td>
                        <td>
                          <%= stock.code %>
                        </td>
                        <td>
                          <a href="#" onclick="updateValues('<%= stock.name %>','<%= stock.code %>','<%=stock.id %>')">
                            <i class="fa fa-edit"></i>
                          </a>
                          &nbsp;&nbsp;&nbsp;

                          <a href="<%= base_url %>admin/stocks/delete/<%= stock.id %>"
                            onclick="return confirm('Are You Sure Want to Delete ?')">
                            <i class="fa fa-trash-o"></i>
                          </a>
                        </td>
                      </tr>
                      <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
    <!-- Modal -->
    <!-- (Ajax Modal)-->

    <div class="modal fade" id="modal_ajax">
      <div class="modal-dialog">
        <div class="modal-content">
          <form action="<%= base_url %>admin/stocks/update" method="post">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title">Edit Stock</h4>
            </div>
            <div class="modal-body">
              <label for="stock_name">Stock Name</label>
              <input class="form-control" id="name1" name="name1" placeholder="Enter Stock Name" type="text" value="">
              <br />
              <label for="stock_code">Stock Code</label>
              <input class="form-control" id="code1" name="code1" placeholder="Enter Stock Code" type="text" value="">
              <input type="hidden" name="id" value="">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div id="myModal" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add Stock</h4>
          </div>

          <form action="<%= base_url %>admin/stocks" method="post">
            <div class="modal-body">
              <div class="box-body">
                <div class="form-group">
                  <label for="property_type">Stock Name</label>
                  <input class="form-control" id="name" name="name" placeholder="Enter Stock Name" type="text"
                    required="required">
                </div>
                <div class="form-group">
                  <label for="property_type">Stock Code(MoneyControl)</label>
                  <input class="form-control" id="code" name="code" placeholder="Enter Stock Code from MoneyControl URL"
                    type="text" required="required">
                </div>
              </div>
              <!-- /.box-body -->
            </div>

            <div class="modal-footer">

              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

              <button type="submit" class="btn btn-primary">Add</button>

            </div>

          </form>

        </div>


      </div>

    </div>


    <% include ../includes/footer.ejs %>
<% include includes/header.ejs %>

<!-- Left side column. contains the logo and sidebar -->

<% include includes/menu.ejs %>

<script>
    function updateValues(url, image, id) {
        setUpValue('url1', url);
        setUpValue('partner_id', id);
        setUpValue('old_image',image);
        $("#display_image").attr("src", "<%= base_url %>uploads/partners/" + image).load();
        showAjaxModal('<%= base_url %>admin/popup/partners/edit/' + id, 'partner');
    }
</script>
<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>

            <%= page_title %>

        </h1>

        <ol class="breadcrumb">

            <li><a href="<%= base_url %>admin"><i class="fa fa-home"></i> Home</a></li>

            <li class="active"><%= page_title %></li>

        </ol>

    </section>


    <!-- Main content -->


    <section class="content">

        <div class="row">

            <div class="col-xs-12">


                <div class="box">

                    <div class="box-header">

                        <div class="col-md-5"></div>

                        <div class="col-md-2">

                            <button type="button" class="btn btn-block btn-default"

                                    data-toggle="modal" data-target="#myModal">Add Partner
                            </button>

                        </div>

                    </div>

                    <!-- /.box-header -->

                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">

                            <thead>

                            <tr>

                                <th>S.No</th>

                                <th>URL</th>

                                <th>Image</th>

                                <th>Actions</th>

                            </tr>

                            </thead>

                            <tbody>
                            <% for(var i = 0;i < partners.length;i++) {
                                var partner = partners[i]; %>

                            <tr>

                                <td><%= i %></td>

                                <td><%= partner.url %></td>

                                <td><img alt="" src="<%= base_url %>uploads/partners/<%= partner.image %>"
                                         style="height: 75px;width: 75px"></td>

                                <td>

                                    <a href="#"
                                       onclick="updateValues('<%= partner.url %>','<%= partner.image %>','<%= partner.partner_id %>')"><i
                                                class="fa fa-edit"></i></a>&nbsp;&nbsp;&nbsp;

                                    <a href="<%= base_url %>admin/partners/delete/<%= partner.partner_id %>"
                                       onclick="return confirm('Are You Sure Want to Delete ?')"><i
                                                class="fa fa-trash-o"></i></a>

                                </td>

                            </tr>

                            <% } %>

                            </tbody>

                        </table>

                    </div>

                    <!-- /.box-body -->

                </div>

                <!-- /.box -->

            </div>

            <!-- /.col -->

        </div>

        <!-- /.row -->

    </section>

    <!-- /.content -->


</div>

<!-- /.content-wrapper -->


<!-- Modal -->


<!-- (Ajax Modal)-->

<div class="modal fade" id="modal_ajax">

    <div class="modal-dialog">

        <div class="modal-content">

            <form action="<%= base_url %>admin/partners/update" method="post" enctype="multipart/form-data">

                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                    <h4 class="modal-title">Edit Partners</h4>

                </div>


                <div class="modal-body">
                    <div class="box-body">

                        <div class="form-group">

                            <label for="city">URL</label>
                            <input class="form-control" id="url1" name="url1" placeholder="Enter URL" type="text"
                                   value="" required="required">

                        </div>

                    </div>

                    <div class="box-body">

                        <div class="form-group">

                            <img src="" id="display_image" name="display_image" alt="Spaces4all"
                                 style="height: 150px;width: 250px">

                            <input class="btn btn-primary" id="image1" name="image1" type="file" accept="image/*">

                        </div>

                    </div>


                    <input type="hidden" name="partner_id" value="">
                    <input type="hidden" name="old_image" id="old_image" value="">

                </div>


                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Save Changes</button>

                </div>

            </form>

        </div>

    </div>

</div>


<div id="myModal" class="modal fade" role="dialog">

    <div class="modal-dialog">


        <!-- Modal content-->

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h4 class="modal-title">Add New Partner</h4>

            </div>

            <form action="<%= base_url %>admin/partners/add" method="post" enctype="multipart/form-data">

                <div class="modal-body">


                    <div class="box-body">

                        <div class="form-group">

                            <label for="city">URL</label>
                            <input class="form-control" id="url" name="url" placeholder="Enter URL" type="text"
                                   required="required">

                        </div>

                    </div>

                    <div class="box-body">

                        <div class="form-group">

                            <label for="city">Upload Image</label>
                            <input class="btn btn-primary" id="image" name="image" type="file" accept="image/*"
                                   required="required">

                        </div>

                    </div>

                    <!-- /.box-body -->


                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Add</button>

                </div>

            </form>

        </div>


    </div>

</div>


<% include includes/footer.ejs %>
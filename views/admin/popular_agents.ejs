<% include includes/header.ejs %>

<!-- Left side column. contains the logo and sidebar -->

<% include includes/menu.ejs %>

<script>
    function updateValues(id, company, name, phone, category, city) {
        setUpValue('agent_id', id);
        setUpValue('company1', company);
        setUpValue('name1', name);
        setUpValue('phone1', phone);
        setUpValue('category1', category);
        setUpValue('city1', city);
        showAjaxModal('<%= base_url %>admin/popup/edit-popular-agents/'+id,'popular_agents');
    }
</script>
<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">

    <!-- Content Header (Page header) -->

    <section class="content-header">

        <h1>

            <%= page_title %>

        </h1>

        <ol class="breadcrumb">

            <li><a href="<%= base_url %>admin"><i class="fa fa-home"></i> Home</a></li>

            <li class="active"><%= page_title %></li>

        </ol>

    </section>


    <!-- Main content -->


    <section class="content">

        <div class="row">

            <div class="col-xs-12">

                <div class="box">

                    <div class="box-header">

                        <div class="col-md-5"></div>

                        <div class="col-md-2">

                            <button type="button" class="btn btn-block btn-default"

                                    data-toggle="modal" data-target="#myModal">Add New Agent
                            </button>

                        </div>

                    </div>

                    <!-- /.box-header -->

                    <div class="box-body">

                        <table id="example1" class="table table-bordered table-striped">

                            <thead>

                            <tr>

                                <th>S.No</th>

                                <th>Company</th>

                                <th>Contact Person</th>

                                <th>Contact Number</th>

                                <th>Category</th>

                                <th>City</th>

                                <th>Actions</th>

                            </tr>

                            </thead>

                            <tbody>

                            <% for(var i = 0;i < agents.length;i++) {
                                var agent = agents[i]; %>
                            <tr>

                                <td><%= i %></td>

                                <td><%= agent.company %></td>

                                <td><%= agent.name %></td>

                                <td><%= agent.phone %></td>

                                <td><%= agent.category %></td>

                                <td><%= agent.city %></td>

                                <td>

                                    <a href="#"
                                       onclick="updateValues('<%= agent.agent_id %>','<%= agent.company %>','<%= agent.name %>','<%= agent.phone %>','<%= agent.category %>','<%= agent.city %>')"><i
                                                class="fa fa-edit"></i></a>&nbsp;&nbsp;&nbsp;

                                    <a href="<%= base_url %>admin/popular_agents/delete/<%= agent.agent_id %>"
                                       onclick="return confirm('Are You Sure Want to Delete ?')"><i
                                                class="fa fa-trash-o"></i></a>

                                </td>

                            </tr>

                            <% } %>

                            </tbody>

                        </table>

                    </div>

                    <!-- /.box-body -->

                </div>

                <!-- /.box -->

            </div>

            <!-- /.col -->

        </div>

        <!-- /.row -->

    </section>

    <!-- /.content -->


</div>

<!-- /.content-wrapper -->


<!-- Modal -->


<!-- (Ajax Modal)-->

<div class="modal fade" id="modal_ajax">

    <div class="modal-dialog">

        <div class="modal-content">

            <form action="<%= base_url %>admin/popular_agents/update" method="post">

                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

                    <h4 class="modal-title">Edit Popular Agents</h4>

                </div>

                <div class="modal-body">


                    <div class="box-body">

                        <div class="form-group">

                            <label for="company">Company</label>
                            <input class="form-control" id="company1" name="company1" placeholder="Enter Company Name"
                                   value="" type="text" required="required">

                        </div>

                        <div class="form-group">

                            <label for="contact_person">Contact Person</label>
                            <input class="form-control" id="name1" name="name1"
                                   placeholder="Enter Contact Person" value="" type="text" required="required">

                        </div>

                        <div class="form-group">

                            <label for="phone">Contact Number</label>
                            <input class="form-control" id="phone1" name="phone1" placeholder="Enter Phone Number"
                                   value="" type="text" required="required">

                        </div>

                        <div class="form-group">

                            <label for="category">Category</label>
                            <input class="form-control" id="category1" name="category1" placeholder="Enter Category"
                                   value="hgv" type="text" required="required">

                        </div>

                        <div class="form-group">

                            <label for="city">City</label>
                            <input class="form-control" id="city1" name="city1" placeholder="Enter City" type="text"
                                   value="" required="required">

                        </div>

                    </div>

                    <input type="hidden" name="agent_id" value="">

                </div>


                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Save Changes</button>

                </div>

            </form>

        </div>

    </div>

</div>


<div id="myModal" class="modal fade" role="dialog">

    <div class="modal-dialog">


        <!-- Modal content-->

        <div class="modal-content">

            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h4 class="modal-title">Add Property Type</h4>

            </div>

            <form action="<%= base_url %>admin/popular_agents/add" method="post">

                <div class="modal-body">


                    <div class="box-body">

                        <div class="form-group">

                            <label for="company">Company</label>
                            <input class="form-control" id="company" name="company" placeholder="Enter Company Name"
                                   type="text" required="required">

                        </div>

                        <div class="form-group">

                            <label for="name">Contact Person</label>
                            <input class="form-control" id="name" name="name"
                                   placeholder="Enter Contact Person" type="text" required="required">

                        </div>

                        <div class="form-group">

                            <label for="phone">Contact Number</label>
                            <input class="form-control" id="phone" name="phone" placeholder="Enter Phone Number"
                                   type="text" required="required">

                        </div>

                        <div class="form-group">

                            <label for="category">Category</label>
                            <input class="form-control" id="category" name="category" placeholder="Enter Category"
                                   type="text" required="required">

                        </div>

                        <div class="form-group">

                            <label for="city">City</label>
                            <input class="form-control" id="city" name="city" placeholder="Enter City" type="text"
                                   required="required">

                        </div>

                    </div>

                    <!-- /.box-body -->


                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    <button type="submit" class="btn btn-primary">Add</button>

                </div>

            </form>

        </div>


    </div>

</div>


<% include includes/footer.ejs %>
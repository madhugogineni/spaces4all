<!DOCTYPE HTML>

<html class="no-js">

<head>
    <% include includes/includes.ejs %>
</head>
<script>
    $(document).ready(function () {

        $("form#contact_form").submit(function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                type: "POST",
                url: "<%= base_url %>home/add_contact",
                data: formData,
                success: function (result) {
                    alert(result.message)
                },
                cache: false,
                contentType: false,
                processData: false
            });
        });
    });

</script>

<body class="home">

    <div class="body">
        <% include includes/header.ejs %>
        <!-- End Site Header -->
